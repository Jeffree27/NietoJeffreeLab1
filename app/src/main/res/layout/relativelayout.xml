<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        style="@style/MainTextDesign"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="470dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="94dp"
        android:text="Distance from UST: 1.2 KM" />

    <Button
        android:id="@+id/button3"
        style="@style/ButtonDesign"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="503dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="14dp"
        android:text="BACK" />

    <Button
        android:id="@+id/button4"
        style="@style/ButtonDesign"
        tools:layout_editor_absoluteX="279dp"
        tools:layout_editor_absoluteY="502dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignTop="@+id/button3"
        android:text="NEXT" />

    <TextView
        android:id="@+id/textView5"
        style="@style/MainTextDesign"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="437dp"
        android:layout_width="323dp"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="129dp"
        android:layout_marginStart="13dp"
        android:text="Location: San Lazaro Business Park" />

    <ImageView
        android:id="@+id/imageView2"
        style="@style/ImageDesign"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="35dp"
        android:layout_width="335dp"
        android:layout_height="309dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/Winford" />

    <TextView
        android:id="@+id/textView4"
        style="@style/TitleDesign"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="369dp"
        android:layout_width="374dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="172dp"
        android:text="Winford Hotel and Casino"
        android:textStyle="bold" />
</RelativeLayout>