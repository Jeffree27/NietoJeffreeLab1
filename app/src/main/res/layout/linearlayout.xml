<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        app:srcCompat="@drawable/Winford" />

    <TextView
        android:id="@+id/textView7"
        style="@style/TitleDesign"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:text="Winford Hotel and Casino"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        style="@style/MainTextDesign"
        android:layout_width="332dp"
        android:layout_height="38dp"
        android:text="Location: San Lazaro Business Park" />

    <TextView
        android:id="@+id/textView9"
        style="@style/MainTextDesign"
        android:layout_width="261dp"
        android:layout_height="69dp"
        android:text="Distance from UST: 1.2 KM" />

    <Button
        android:id="@+id/button5"
        style="@style/ButtonDesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BACK" />

    <Button
        android:id="@+id/button6"
        style="@style/ButtonDesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEXT" />

</LinearLayout>